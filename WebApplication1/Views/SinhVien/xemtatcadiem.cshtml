@using WebApplication1.Models.DAO;
@using WebApplication1.Models.EF;
@model sinhvien
@{
    ViewBag.Title = "xemtatcadiem";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@section menu{
    <tr id="menutable">
        <td style="color:white">@Ajax.ActionLink("Bảng điểm", "Index", "Home", new { mssv = Model.mssv }, new AjaxOptions { HttpMethod = "POST" })</td>
        <td style="color:white">@Ajax.ActionLink("Xem Thông Tin", "xemthongtin", "SinhVien", new { mssv = Model.mssv }, new AjaxOptions { HttpMethod = "POST" })</td>
        <td style="color:white" colspan="2"><a href="@Url.Action("Dangxuat","SinhVien")">Đăng xuất </a></td>

    </tr>


}
@section tablehead{
    
    <thead>
        <tr>
            <td align="center" colspan="13">

                <i style="color:red">(Lưu ý:  Bảng điểm này chỉ mang tính tham khảo. Sinh viên xem bảng điểm gốc để đối chiếu tại Văn phòng Khoa. Mọi thắc mắc xin liên hệ Phòng Đào Tạo)</i>
            </td>
        </tr>
        <tr>
            <th rowspan="2">
                Năm học<br>
                Học kỳ
            </th>
            <th rowspan="2">
                MAMH
            </th>
            <th rowspan="2">
                Tên môn học
            </th>





        </tr>
        <tr>
            <th>
                Điểm<br>quá<br>trình
            </th>
            <th>
                Điểm<br>thi giữa<br>HP
            </th>
            <th>
                Điểm<br>thi cuối<br>HP
            </th>
            <th>
                Số lần<br>thi
            </th>
            <th>Tổng<br>kết</th>
        </tr>
    </thead>

}
<table align="center" border="0" cellspacing="0" cellpadding="3">
    <tbody>
        <tr>
            <th colspan="2">THÔNG TIN SINH VIÊN</th>
        </tr>
        <tr>
            <td>MSSV</td>
            <td>:@Model.mssv</td>
        </tr>
        <tr>
            <td>Họ tên</td>
            <td>:@Model.hoten</td>
        </tr>
        <tr>
            <td>Lớp</td>
            <td>:@Model.lop</td>
        </tr>
        <tr></tr>
    </tbody>
</table>
@section table{

    @foreach (diem diem in ViewBag.Diem)
    {
        monhoc mh = MonHocDao.Instance.getmonhocbyID(diem.mamh);

        <tr style="text-align:center">
            <td>@diem.mahk</td>
            <td>@diem.mamh</td>
            <td>@mh.tenmh</td>



            <td>@diem.diemQT</td>
            <td>@diem.diemGK</td>
            <td>@diem.diemCK</td>



            <td>@diem.solanthi</td>
            <td>@diem.tongdiem</td>



        </tr>

    }

}



