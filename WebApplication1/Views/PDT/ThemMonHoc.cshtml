
@{
    ViewBag.Title = "ThemMonHoc";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
@if (Session["ErrorMess"] != null)
{
    if (string.Compare(Session["ErrorMess"].ToString(), "Success!") == 0)
    {
        <div class="alert alert-success">@Session["ErrorMess"]</div>
        Session["ErrorMess"] = null;
    }
    else
    {
        <div class="alert alert-danger">@Session["ErrorMess"]</div>
        Session["ErrorMess"] = null;
    }



}

<div class="panel panel-default">
    <div class="panel-heading">
        Thông tin môn học
    </div>

    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12">

                @using (Html.BeginForm("ThemMonHoc", "PDT", FormMethod.Post))
                {
                  
                                <div class="form-group">
                                    <label>Tên môn học</label>
                                    <input name="tenmonhoc" class="form-control" >
                                </div>
                                <div class="form-group">
                                    <label>Số tín chỉ</label>
                                    <input name="sotc" type="number" class="form-control" >
                                </div>
                                <div class="form-group">
                                    <label>Mã Khoa</label>
                                    <input name="makhoa" class="form-control" >
                                </div>




                                <button name="submit" type="submit" class="btn btn-default">Sửa</button>
                }







            </div>
            <!-- /.col-lg-6 (nested) -->
            <!-- /.col-lg-6 (nested) -->
        </div>
        <!-- /.row (nested) -->
    </div>
    <!-- /.panel-body -->
</div>



