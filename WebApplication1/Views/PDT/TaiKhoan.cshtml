@using WebApplication1.Models.EF;
@model PDT
@{
    ViewBag.Title = "TaiKhoan";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
@if (Session["ErrorMess"] != null)
{
    if (string.Compare(Session["ErrorMess"].ToString(), "Success!") == 0)
    {
        <div class="alert alert-success">@Session["ErrorMess"]</div>
        Session["ErrorMess"] = null;
    }
    else
    {
        <div class="alert alert-danger">@Session["ErrorMess"]</div>
        Session["ErrorMess"] = null;
    }
}


<div class="row carousel-holder">
    <div class="col-md-2">
    </div>
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading">Thông tin tài khoản</div>
            <div class="panel-body">
                @using (Html.BeginForm("SuaTaiKhoan", "PDT", FormMethod.Post))
                {
                    <div>
                        <label>Họ tên</label>
                        <input type="hidden" name="ma" value="@Model.msnv" />
                        <input type="tel" class="form-control" name="hoten" aria-describedby="basic-addon1" value="@Model.hoten">
                    </div>
                    <br>
                    <div>
                        <label>Số điện thoại</label>
                        <input type="number" class="form-control" name="sdt" value="@Model.sdt" min="0" maxlength="11">
                    </div>
                    <div>
                        <label>Email</label>
                        <input type="email" class="form-control" name="email" value="@Model.email">
                    </div>
                    <br>
                    <a href="@Url.Action("DoiMatKhau","PDT",new { ma = Model.msnv })" class="btn btn-primary">Đổi mật khẩu</a>
                    @*<div>
                       
                        <label>Đổi mật khẩu</label>
                        <input type="password" class="form-control" name="password" aria-describedby="basic-addon1" >
                    </div>
                    <br>
                    <div>
                        <label>Nhập lại mật khẩu</label>
                        <input type="password" class="form-control" name="passwordAgain" aria-describedby="basic-addon1" >
                    </div>
                    <br>*@
                    <button type="submit" class="btn btn-default">
                        Sửa
                    </button>
                }
                    
                
            </div>
        </div>
    </div>
    <div class="col-md-2">
    </div>
</div>
<!-- end slide -->