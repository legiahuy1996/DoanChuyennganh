@model WebApplication1.Models.EF.sinhvien

@{
    ViewBag.Title = "EditSV";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}


@if (Session["ErrorMess"] != null)
{
    if (string.Compare(Session["ErrorMess"].ToString(), "Success!") == 0)
    {
        <div class="alert alert-success">@Session["ErrorMess"]</div>
        Session["ErrorMess"] = null;
    }
    else
    {
        <div class="alert alert-danger">@Session["ErrorMess"]</div>
        Session["ErrorMess"] = null;
    }
}

<h2>Sửa sinh viên</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        Thông tin môn học
    </div>

    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12">

                @using (Html.BeginForm("EditSV", "PDT", FormMethod.Post))
                {
                   
                                <div class="form-group">
                                    <input type="hidden" name="ma" value="@Model.mssv" />
                                    <label>Họ tên sv</label>
                                    <input name="hoten" class="form-control" value="@Model.hoten">
                                </div>
                                <div class="form-group">
                                    <label>Giới tính</label>
                                  @if(Model.gioitinh == true)
                                  {
                                      <div class="form-group">
                                          <input type="radio" name="gioitinh" value="true" checked="checked" /><span>Nam</span>
                                          <input type="radio" name="gioitinh" value="false" /><span>Nữ</span>
                                      </div>


                                  }
                                  else
                                  {
                                    <div class="form-group">
                                        <input type="radio" name="gioitinh" value="true"  /><span>Nam</span>
                                        <input type="radio" name="gioitinh" value="false"checked="checked" /><span>Nữ</span>
                                    </div>
                                  }
                                </div>
                                <div class="form-group">
                                    <label>Ngày Sinh</label>
                                    <input type="text" name="ngaysinh" class="form-control" id="datepicker" readonly value="@Model.ngaysinh" />
                                </div>
                                <div class="form-group">
                                    
                                    <label>Địa chỉ</label>
                                    <textarea class="form-control" rows="5" name="diachi" >@Model.diachi</textarea>
                                </div>
                                <div class="form-group">

                                    <label>Số điện thoại</label>
                                    <input type="number" name="sdt" class="form-control" value="@Model.sdt">
                                </div>
                                <div class="form-group">

                                    <label>Email</label>
                                    <input type="email" name="email" class="form-control" value="@Model.email">
                                </div>
                                <div class="form-group">
                                    <label>Lớp</label>
                                    <input type="text" class="form-control" name="lop" value="@Model.lop" />
                                </div>
                                <div class="form-group">
                                    <label>Mã đăng ký môn học</label>
                                    <input type="text" class="form-control" name="madk" value="@Model.madk" />
                                </div>
                                <div class="form-group">
                                    <label>Mã Khoa</label>
                                    <input type="text" class="form-control" name="makhoa" value="@Model.makhoa" />
                                </div>



                                <button name="submit" type="submit" class="btn btn-warning">Sửa</button>
                }
                <br />
                <div>
                    <a href="@Url.Action("Index","PDT")" class="btn btn-primary">Back to list</a>
                </div>






            </div>
            <!-- /.col-lg-6 (nested) -->
            <!-- /.col-lg-6 (nested) -->
        </div>
        <!-- /.row (nested) -->
    </div>
    <!-- /.panel-body -->
</div>
<!-- /.panel -->
<!-- /#page-wrapper -->


