
@{
    ViewBag.Title = "DoiMatKhau";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

@if (Session["ErrorMess"] != null)
{
    if (string.Compare(Session["ErrorMess"].ToString(), "Success!") == 0)
    {
        <div class="alert alert-success">@Session["ErrorMess"]</div>
        Session["ErrorMess"] = null;
    }
    else
    {
        <div class="alert alert-danger">@Session["ErrorMess"]</div>
        Session["ErrorMess"] = null;
    }
}


<div class="row carousel-holder">
    <div class="col-md-2">
    </div>
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading">Thông tin tài khoản</div>
            <div class="panel-body">
                @using (Html.BeginForm("DoiMatKhau", "PDT", FormMethod.Post))
                {
                    <div>
                        <label>Mật khẩu cũ</label>
                        <input type="hidden" name="ma" value="@Model.msnv" />
                        <input type="password" class="form-control" name="oldpassword" aria-describedby="basic-addon1">
                    </div>
                    <br>
                    <div>
                        <label>Mật khẩu mới</label>
                        <input type="password" class="form-control" name="newpassword" >
                    </div>
                    <br />
                    <div>
                        <label>Nhập lại mật khẩu mới</label>
                        <input type="password" class="form-control" name="newpasswordAgain" >
                    </div>
                    <br>
                   
                    <button type="submit" class="btn btn-default">
                        Đổi
                    </button>
                }


            </div>
        </div>
    </div>
    <div class="col-md-2">
    </div>
</div>
<!-- end slide -->

